@model IEnumerable<BeerCellier.Models.Beer>

@{
    ViewBag.Title = "My Cellar";
}

<h2>My Cellar</h2>
<br>
<div>
    <form method="get" 
          action="@Url.Action("Index")" 
          data-beercellier-ajax="true" 
          data-beercellier-target="#beerList">
        <input type="search" 
               name="searchTerm" 
               data-beercellier-autocomplete="@Url.Action("QuickSearch")" />
        <input type="submit" 
               value="Search" />
    </form>
</div>
<br>
@Html.Partial("_BeerList", Model)