@model BeerCellier.Models.Beer

@{
    ViewBag.Title = "Drink a beer";
}

<h2>Drink a beer</h2>

<h3>Are you sure you want to drink this beer?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.Quantity > 0)
            {
                <input type="submit" value="Drink it" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Drink it" class="btn btn-default" disabled="disabled" />
            }

            | @Html.ActionLink("« Back", "Index")
        </div>
    }
</div>
