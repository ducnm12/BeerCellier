@model IEnumerable<BeerCellier.Models.Beer>

@using PagedList;
@using PagedList.Mvc;

<div id="beerList">
    <table class="table">
        <thead>
            <tr>
                <th colspan="3">@Html.ActionLink("Add a beer", "Create", null, new { @class = "btn btn-primary" })</th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th colspan="2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Drink a beer", "Drink", new { id = item.ID }) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagedList" data-beercellier-target="#beerList">
        @Html.PagedListPager((IPagedList) Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.MinimalWithItemCountText)
    </div>
</div>